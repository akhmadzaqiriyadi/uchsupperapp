{
  "name": "uch-connection",
  "version": "1.0.0",
  "description": "UCH Connection - Digital Financial Ledger System",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/seed.ts",
    "minio:setup": "NODE_TLS_REJECT_UNAUTHORIZED=0 bun run src/setup-minio.ts",
    "test": "bun run tests/e2e/api.test.ts",
    "test:e2e": "bun run tests/e2e/api.test.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.969.0",
    "@aws-sdk/s3-request-presigner": "^3.969.0",
    "@elysiajs/bearer": "^1.4.2",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "@node-rs/bcrypt": "^1.10.7",
    "@smithy/node-http-handler": "^4.4.8",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "jsonwebtoken": "^9.0.3",
    "postgres": "^3.4.8",
    "zod": "^4.3.5"
  }
}